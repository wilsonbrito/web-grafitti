/**
* Mixin - Font-weight
*/
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700

/**
* Mixin - Viewport
*/
viewport = 1170px

/**
* Mixin - Responsive
* @media (max-width screen-sm-min)
* @media (max-width screen-md-min)
* @media (max-width screen-lg-min)
*/
// Smaller devices (phones, 320px and down)
screen-xs = 320px
// Small devices (phones, 568px and down)
screen-xs = 568px
// Small devices (tablets, 768px and down)
screen-sm = 768px
// Medium devices (desktops, 992px and down)
screen-md = 992px
// Medium devices (desktops, 1200px and down)
screen-lg = 1200px

/*
* Global
* Elementos globais que podem ser extendidos ao longo do documento
*/
.container
  min-width: 0
  max-width: viewport
  margin 0 auto
  width: auto

/*
* Base
* Estilo base do elementos do Html
*/
body
	background #FAFAFA
	font-family 'Poppins', sans-serif

	@font-face
		font-family rockwell
		src url(font/mrockwell-italic.woff)
		
/*
* Components
* Componentes que se adaptam ao contexto
*/
.menu
	#icone-menu
		width 18px
		height 34px
		fill #DEC554
	.titulo-menu
		text-transform uppercase
		font-size 12px
		margin 1px 0 0 
		color #DEC554

.pesquisar
	#busca
		width 53px
		height 53px
		fill #DEC554

.sacola
	#carrinho
		width 53px
		height 53px
		fill #336279
	.quantidade
		color #336279
		font-size 16px

.parallelogram-one
	width 150px
	height 100px
	-webkit-transform skew(20deg)
	   -moz-transform skew(20deg)
	     -o-transform skew(20deg)
	background red

.produto
	#sapato
		max-width 359px
		height auto
.parallelogram-two
	width 150px
	height 100px
	-webkit-transform skew(20deg)
	   -moz-transform skew(20deg)
	     -o-transform skew(20deg)
	background green

/*
* State
* Estado global do Layout
*/
body
	.cabecalho
	.conteudo
	.rodape
		@extend .container

.cabecalho
	.menu-principal
		display flex
		flex-flow row wrap
		align-items center
		justify-content space-between

.menu-principal
	.logo
		display flex
		flex-flow row wrap
		align-items center
		margin-right 40px
		flex 0 0 173px
	.menu
		display flex
		flex-flow row wrap
		max-width 36px
		justify-content center
		align-items center
	.pesquisar
	.sacola
		display flex
		flex-flow row wrap
		width 63px
		height 53px
	.pesquisar
		justify-content flex-end
		flex 1 1 auto
		margin-right 60px