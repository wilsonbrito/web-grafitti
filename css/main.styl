/**
* Mixin - Font-weight
*/
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700

/**
* Mixin - Viewport
*/
viewport = 1170px

/**
* Mixin - Responsive
* @media (max-width screen-sm-min)
* @media (max-width screen-md-min)
* @media (max-width screen-lg-min)
*/
// Smaller devices (phones, 320px and down)
screen-xs = 320px
// Small devices (phones, 568px and down)
screen-xs = 568px
// Small devices (tablets, 768px and down)
screen-sm = 768px
// Medium devices (desktops, 992px and down)
screen-md = 992px
// Medium devices (desktops, 1200px and down)
screen-lg = 1200px

/*
* Global
* Elementos globais que podem ser extendidos ao longo do documento
*/
.container
  min-width: 0
  max-width: viewport
  margin 0 auto
  width: auto

/*
* Base
* Estilo base do elementos do Html
*/
body
	background #FAFAFA
	font-family 'Poppins', sans-serif
		
/*
* Components
* Componentes que se adaptam ao contexto
*/
.menu
	#icone-menu
		width 18px
		height 34px
		fill #DEC554
	.titulo-menu
		text-transform uppercase
		font-size 12px
		margin 1px 0 0 
		color #DEC554

.pesquisar
	#busca
		width 53px
		height 53px
		fill #DEC554

.sacola
	#carrinho
		width 53px
		height 53px
		fill #336279
	.quantidade
		color #336279
		font-size 16px

.bloco-produto
	&:before
		position absolute
		content ''
		display block
		width 426px
		height 535px
		background #A6C9DB
		transform skew(-30deg) translate3d(-55%,-50%,0)
		top 55%
		left 50%
		z-index -1
	&:after
		position absolute
		content ''
		display block
		width 426px
		height 535px
		background #ED583C
		transform skew(-30deg) translate3d(-24%,-24%,0)
		top 24%
		left 24%
		z-index -2

.cor
	span
		font-size 14px
		font-weight medium
		color #336279
	.cores
		input 
			width 43px
			height 43px

.produto
	#sapato
		width 594px
		height auto
		font-weight bold

.titulo-produto
	font-size 30px
	color #336279

.preco
	font-size 40px
	font-weight medium
	color #FAFAFA

/*
* State
* Estado global do Layout
*/
body
	.cabecalho
	.conteudo
	.rodape
		@extend .container

.cabecalho
	.menu-principal
		display flex
		flex-flow row wrap
		align-items center
		justify-content space-between

.menu-principal
	.logo
		display flex
		flex-flow row wrap
		align-items center
		margin-right 40px
		flex 0 0 173px
	.menu
		display flex
		flex-flow row wrap
		max-width 36px
		justify-content center
		align-items center
	.pesquisar
	.sacola
		display flex
		flex-flow row wrap
		width 63px
		height 53px
	.pesquisar
		justify-content flex-end
		flex 1 1 auto
		margin-right 60px

.conteudo
	.cor
		display flex
		align-items center
	.bloco-produto
		position relative
		height 600px
		display flex
		justify-content center
		align-items center